{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["es6", "es2015"],
    "declaration": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
  },
  "exclude": [
    "lib",
    "node_modules",
    "**/__tests__/*"
  ],
  "include": [
    "src"
  ]
}